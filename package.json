{
  "name": "rosmarin.ts",
  "version": "0.1.0",
  "description": "Framework for REST API development",
  "main": "index.ts",
  "scripts": {
    "test:precommit": "jest --config jest.config.ts --findRelatedTests",
    "test": "jest --config jest.config.ts",
    "format": "prettier --write \"src/**/*.ts\" \"__test__/**/*.spec.ts\" \"__test__/setup.ts\" \"./**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" \"__test__/**/*.spec.ts\" \"./**/*.ts\"",
    "lint:fix": "eslint --fix \"src/**/*.ts\" \"__test__/**/*.spec.ts\" \"./**/*.ts\"",
    "build": "tsc"
  },
  "keywords": [
    "REST",
    "Hypermedia",
    "HATEOAS"
  ],
  "author": "Matthias Keckl",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "npm run test:precommit",
      "npm run lint",
      "npm run format"
    ]
  }
}
